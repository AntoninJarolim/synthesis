dtmc

const int CMAX;
const double THRESHOLD;

const double pa = 0.6;
const double pb = 0.3;
const double pc = 0.1;

const int s0a; const int s0b; const int s0c;

module dice
    s : [0..2] init 0;
    [] s=2 | s=1 -> true;
    [] s=0 -> pa : (s' = s0a) + pb : (s' = s0b) + pc : (s' = s0c);
endmodule

formula heads = (s = 2);
formula tails = (s = 1);

formula finished = heads | tails;

rewards "steps"
    true : 1;
endrewards
